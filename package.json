{
  "name": "custom-import-sort",
  "version": "1.0.2",
  "author": "Alex Rudoy",
  "publisher": "AlexRudoy",
  "displayName": "Custom Import Sort",
  "description": "Allows you to customize and automate import sorting",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alex-Rudoy/custom-import-sort"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Formatters"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "ts-loader": "^9.2.8",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "@vscode/test-electron": "^2.1.3"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Run Custom Import Sort",
        "command": "customImportSort.sortImports"
      }
    ],
    "configuration": [
      {
        "title": "CustomImportSort",
        "properties": {
          "customImportSort.sortOnSave": {
            "type": "boolean",
            "description": "Sort imports on save",
            "default": true
          },
          "customImportSort.sortOnSavePreservingComments": {
            "type": "boolean",
            "description": "Sort imports on save (preserving comments)",
            "default": false
          },
          "customImportSort.sortingSettings": {
            "type": "array",
            "description": "How your imports should be sorted",
            "default": [
              {
                "regex": "^react$",
                "importance": 4
              },
              {
                "regex": ".",
                "importance": 0,
                "lineafter": true
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)component",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)feature",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)table",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)layout",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)page",
                "importance": 3
              },
              {
                "regex": "^@",
                "importance": 1
              },
              {
                "regex": "^\\.\\/",
                "importance": 1
              },
              {
                "regex": "^\\.\\.\\/",
                "importance": 2,
                "lineafter": true
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)util",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)api",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)service",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)store",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)store.*\\/use",
                "importance": 4
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)hook",
                "importance": 3,
                "lineafter": true
              },
              {
                "regex": "const",
                "importance": 1
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)rout",
                "importance": 3
              },
              {
                "regex": "^(@|[\\.\\.\\/]+)typings",
                "importance": 3
              },
              {
                "regex": "\\.types?(\\.tsx?)?$",
                "importance": 1,
                "lineafter": true
              },
              {
                "regex": "^\\.?\\.\\/.*\\.types(\\.tsx?)?$",
                "importance": 4,
                "lineafter": true
              },
              {
                "regex": "\\.s?css$",
                "importance": 4,
                "lineafter": true
              }
            ]
          }
        }
      }
    ]
  }
}
